{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "compiled",
    "skipLibCheck": true
  },
  "exclude": [
    "src/main.aot.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : true
 }
}